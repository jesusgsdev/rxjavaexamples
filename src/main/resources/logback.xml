<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-6r [%-26.26thread] [%-5level] [%-26.26logger{26}] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="org.dizitart.no2" level="OFF"/>
    <logger name="uk.co.jemos.podam" level="OFF"/>
</configuration>
